<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10px" >

    <TextView
        android:id="@+id/text_kb_streamed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_stream"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_kb_streamed"
        android:layout_marginTop="10px"
        android:text="@string/play" />

    <TextView
        android:id="@+id/wifi_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20px"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="400dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingTop="50dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/button_stream" />

    <TextView
        android:id="@+id/time_elapsed"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/progress_bar" />
    
    <TextView
        android:id="@+id/time_left"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/progress_bar" />

    <ImageButton
        android:id="@+id/button_play"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_elapsed"
        android:layout_marginTop="5px"
        android:src="@drawable/iconshave" />

    <Button
        android:id="@+id/next"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_play"
        android:layout_marginTop="30dip"
        android:text="@string/next"
        android:visibility="gone" />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="300dip"
        android:text="@string/song_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/artist_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_name"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/peer_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist_name"
        android:textStyle="bold" />

</RelativeLayout>